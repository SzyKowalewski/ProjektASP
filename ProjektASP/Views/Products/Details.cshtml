@model ProjektASP.Models.Product

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Nazwa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            Kategoria
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

        <dt>
            Opis
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            Cena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>

        <dt>
            Dostępność
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Avaliable)
        </dd>

        <dt>
            Zdjęcie
        </dt>
        <dd>
            @if (Model.Images != null && Model.Images.Any())
            {
                <ul>
                    @foreach (var image in Model.Images)
                    {
                        <li>
                            <img src="@Url.Content(image.ImagePath)" alt="Product Image" />
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No images</p>
            }
        </dd>

        <dt>
            Załączone pliki
        </dt>
        <dd>
            @if (Model.AttachedFiles != null && Model.AttachedFiles.Any())
            {
                <ul>
                    @foreach (var attachedFile in Model.AttachedFiles)
                    {
                        <li>
                            Nazwa pliku: @attachedFile.FileName<br />
                            Opis: @attachedFile.Description
                            <br />
                            @Html.ActionLink("Pobierz", "DownloadFile", new { id = attachedFile.Id })
                        </li>
                    }
                </ul>
            }
            else
            {
                <p>No attached files</p>
            }
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
