@model IEnumerable<ProjektASP.Models.Product>
@{
    ViewBag.Title = "BasketView";
}

<h2>Koszyk</h2>

<table class="table">
    <tr>
        <th>
            Nazwa
        </th>
        <th>
            Cena [zł]
        </th>


        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>

                @Html.ActionLink("Usuń z Koszyka", "Deleted", new { id = item.Id })

            </td>
            <td>
                @Html.ActionLink("Pokaż ogłoszenie", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
@if (TempData["InsufficientStock"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["InsufficientStock"]
    </div>
}
else
{
    @Html.ActionLink("Zamów", "Order")
}